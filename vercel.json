{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(html|css|js|png|jpg|jpeg|gif|ico))",
      "dest": "/src/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/app.js",
      "headers": {
        "Cache-Control": "public, max-age=10800, stale-while-revalidate=3600"
      }
    }
  ]
}